{% assign versionCache = site.time|date: "%Y-%m-%d_%H-%M-%S" %}

<!DOCTYPE html>
<html id="pterosaurDestroyedAlgorithms" lang="en">

<head>
    <!-- stuff that needs to be first -->
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- site info -->
    <title>{% include helpers/metaTitle.liquid %}</title>
    <meta name="description" content="{% include helpers/metaDescription.liquid %}">
    <base href="{{ site.baseurl }}">
    <link rel="home" href="{{ site.baseurl }}">
    <link rel="author" href="humans.txt">
    <link rel="copyright" href="LICENSE">

    <!-- robots -->
    <meta name="robots" content="index,follow,noodp">
    <meta name="googlebot" content="index,follow">

    <!-- open graph -->
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:title" content="{% include helpers/metaTitle.liquid %}">
    <meta property="og:description" content="{% include helpers/metaDescription.liquid %}">
    <meta property="og:url" content="{{ site.baseurl }}{{ page.url }}">
    <meta property="og:image" content="{{ site.baseurl }}/favicon.png">

    <!-- style & icons -->
    <link href="/dist/styles/monolith.css?{{ versionCache }}" media="all" rel="stylesheet">
    <link rel="icon" href="/favicon.ico?{{ versionCache }}">
    <link rel="apple-touch-icon" href="{{ site.baseurl }}/favicon.png">
</head>

<body i-area="double-v medium-h">
    <!-- SVG symbols for <use> tags -->
    <div style="display:none;">{% include symbols.svg %}</div>
