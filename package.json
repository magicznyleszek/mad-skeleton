{
  "name": "mad-skeleton",
  "private": true,
  "version": "0.0.0",
  "description": "A small MADCSS-based web boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/smutnyleszek/mad-skeleton.git"
  },
  "author": "Leszek Pietrzak",
  "license": "CC0 4.0 BY-NC-ND",
  "bugs": {
    "url": "https://github.com/smutnyleszek/mad-skeleton/issues",
    "email": "smutnyleszek@gmail.com"
  },
  "homepage": "https://github.com/smutnyleszek/mad-skeleton",
  "scripts": {
    "start": "npm-run-all watch",
    "build": "npm-run-all dist:rebuild svg:build styles:build images:build",
    "watch": "npm-watch",
    "serve": "npm-run-all build jekyll:serve",
    "lint": "stylelint \"src/**/*.css\"",
    "dist:rebuild": "rm -rf dist && mkdir dist && mkdir dist/styles",
    "images:build": "node bin/buildImages.js",
    "styles:build": "postcss src/styles/main.css -o dist/styles/monolith.css",
    "svg:build": "svgo -f src/symbols/ && svgshelf -p symbol- src/symbols/\\*.svg _includes/symbols.svg",
    "jekyll:build": "jekyll build",
    "jekyll:serve": "jekyll serve --watch --baseurl ''"
  },
  "watch": {
    "styles:build": {
      "patterns": [
        "src/styles"
      ],
      "extensions": "css",
      "quiet": false
    }
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "cssnano": "^3.10.0",
    "gm": "^1.23.0",
    "npm-run-all": "^4.0.2",
    "npm-watch": "^0.1.9",
    "postcss": "^6.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "stylelint": "^7.11.1",
    "stylelint-order": "^0.5.0",
    "svgo": "^0.7.2",
    "svgshelf": "^1.0.3"
  }
}
